# ========================================
# DATABASE CONFIGURATION
# ========================================
DB_CONNECTION_STRING=mongodb+srv://<user>:<pass>@<cluster-url>/<db>?retryWrites=true&w=majority&appName=<app-name>
DB_NAME=easy_app

# ========================================
# SERVER CONFIGURATION
# ========================================
PORT=3000
NODE_ENV=development

# ========================================
# CRITICAL SECURITY (REQUIRED FOR PRODUCTION)
# ========================================
# Generate with: openssl rand -base64 32
# OR use: node -e "console.log(require('crypto').randomBytes(32).toString('base64'))"
JWT_SECRET=CHANGE_THIS_TO_A_RANDOM_SECRET_KEY_MINIMUM_32_CHARACTERS

# Admin API Key (for programmatic access)
ADMIN_API_KEY=CHANGE_THIS_TO_A_RANDOM_API_KEY

# Allowed CORS Origins (comma-separated, NO SPACES)
# Production example: https://yourdomain.com,https://easy-backend-785621869568.asia-south1.run.app
# Development example: http://localhost:3000,http://192.168.1.76:3000
ALLOWED_ORIGINS=http://localhost:3000

# ========================================
# FIREBASE CONFIGURATION
# ========================================
# Path to Firebase Admin SDK service account JSON
# On Cloud Run: prefer Workload Identity (don't set these)
# Locally: point to your service account file
GOOGLE_APPLICATION_CREDENTIALS=./serviceAccount.json
FIREBASE_SERVICE_ACCOUNT=./serviceAccount.json

# ========================================
# FIREBASE CLOUD MESSAGING (FCM)
# ========================================
FCM_SERVER_KEY=df54ccff869b4dff7737f3b313eddb019309e54c
FCM_SENDER_ID=785621869568

# ========================================
# GOOGLE MAPS API
# ========================================
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here
GEOCODE_SERVER_FALLBACK=1

# ========================================
# PAYMENT CONFIGURATION
# ========================================
UPI_VPA=yourname@bank
UPI_PAYER_NAME=Easy Store
UPI_NOTE_PREFIX=Easy Order

# ========================================
# EMAIL NOTIFICATIONS (Optional)
# ========================================
# For Gmail: Use App Password, not regular password
# EMAIL_USER=your-email@gmail.com
# EMAIL_PASSWORD=your-gmail-app-password

# ========================================
# SMS NOTIFICATIONS (Optional - Twilio)
# ========================================
# TWILIO_ACCOUNT_SID=your_twilio_account_sid
# TWILIO_AUTH_TOKEN=your_twilio_auth_token
# TWILIO_PHONE_NUMBER=+1234567890

# ========================================
# CDN CONFIGURATION (Optional - for static assets)
# ========================================
# CDN Provider: cloudflare, cloudinary, aws-cloudfront, or custom
CDN_PROVIDER=none

# CDN Domain (e.g., https://cdn.yourdomain.com)
# Leave empty to serve from API directly
CDN_DOMAIN=

# CDN Prefix (for reverse proxy setups, e.g., /cdn)
CDN_PREFIX=

# ========================================
# IMAGE OPTIMIZATION
# ========================================
# Maximum upload file size in bytes (default: 5MB)
UPLOAD_MAX_BYTES=5242880

# Image optimization quality (1-100, default: 90)
IMAGE_QUALITY=90

# Maximum image dimensions (default: 1200x1200)
IMAGE_MAX_WIDTH=1200
IMAGE_MAX_HEIGHT=1200

# ========================================
# REDIS (Optional - for caching & performance)
# ========================================
# REDIS_URL=redis://localhost:6379

# ========================================
# LOGGING
# ========================================
LOG_LEVEL=info

# ========================================
# ERROR MONITORING (Sentry)
# ========================================
# Get your DSN from: https://sentry.io/
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# ========================================
# DEVELOPMENT/DEBUG FLAGS (Disable in production)
# ========================================
# Auto-verify Firebase phone auth claims (dev only)
AUTO_VERIFY_CLAIMS=true

# Allow phone claim mapping without strict validation (dev only)
ALLOW_PHONE_CLAIM=false

# Debug mode for upsert operations
DEBUG_UPSERT=false

